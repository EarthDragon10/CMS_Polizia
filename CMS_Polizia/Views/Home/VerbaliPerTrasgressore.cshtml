@model IEnumerable<CMS_Polizia.Models.Anagrafica>

@{
    ViewBag.Title = "VerbaliPerTrasgressore";
}

@*<h2>VerbaliPerTrasgressore</h2>*@

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotaleMulte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumVerbali)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotaleMulte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumVerbali)
        </td>
    </tr>
}

</table>
